# Environment Configuration
NODE_ENV=production

# API Server
PORT=8080
API_KEY=pon-una-api-key-segura-aqui

# PostgreSQL Database
PGHOST=db
PGPORT=5432
PGDATABASE=panel_secretario
PGUSER=panel_user
PGPASSWORD=panel_password

# Application
PUBLIC_BASE_URL=https://avances-tys.hidalgo.gob.mx
# For local development use: http://localhost

# CORS (comma-separated origins)
CORS_ORIGINS=https://avances-tys.hidalgo.gob.mx,http://localhost:5173,http://localhost,http://localhost:3000,http://localhost:80

# File Upload
MAX_FILE_SIZE=20971520
# 20MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=5
# Max 5 uploads per 15 minutes

# SSL/TLS (for production)
DOMAIN=avances-tys.hidalgo.gob.mx
EMAIL=admin@hidalgo.gob.mx
